<link rel="stylesheet" type="text/css" href="/css/modifyPages.css">


<section class="modifySection">
    <form action="/admin/gasstations/{{gasstation.[0].id}}/update" method="post" id="updateGasstation">
    <!--Make drop down with list of branch names -->
    <div>
        <label for="branchId">Kæde</label>
        <select name="branchId" id="branchId">
            {{#each branches}}
                <option value="{{this.id}}" {{#ifEq this.id ../gasstation.[0].branchId}}selected{{/ifEq}}>{{this.name}}</option>
            {{/each}}
        </select>
    </div>
    <div>
        <label for="address">Address:</label>
        <input type="text" id="address" name="address" value="{{gasstation.[0].address}}">
    </div>
    <div>
        <label for="city">By:</label>
        <input list="cities" id="city" name="city" value="{{#if gasstation.[0].[City.zipCode]}}{{gasstation.[0].[City.name]}} ({{gasstation.[0].[City.zipCode]}}){{/if}}" autocomplete="off">
    
        <datalist id="cities">
            {{#each cities}}
            <option value="{{this.name}} ({{this.zipCode}})"></option>
            {{/each}}
        </datalist>

    </div>
    <div>
        <label for="contactEmail">Contact Email:</label>
        <input type="email" id="contactEmail" name="contactEmail" value="{{gasstation.[0].contactEmail}}">
    </div>
    <div>
        <label for="contactPhone">Contact Phone:</label>
        <input type="text" id="contactPhone" name="contactPhone" value="{{gasstation.[0].contactPhone}}">
    </div>
    <div>
        <label for="frontSpace">Front Space:</label>
        <select id="frontSpace" name="frontSpace">
            <option value="1" {{#ifEq gasstation.[0].frontSpace 1}}selected{{/ifEq}}>Ja</option>
            <option value="0" {{#ifEq gasstation.[0].frontSpace 0}}selected{{/ifEq}}>Nej</option>
        </select>
    </div>
    <div>
        <button type="submit" form="deleteGasstation">Delete gasstation</button>
        <button type="submit" form="updateGasstation">Update gasstation</button>
    </div>
    </form>
    <form class="hidden" action="/admin/gasstations/{{gasstation.[0].id}}/delete" method="post" id="deleteGasstation" onsubmit="return confirm('Slet nuværende tankstation?');"/>
</section>