<!--velkommen (med tom string der henter fra profil)-->
<section>
    <h1>Velkommen {{users.firstName}}!</h1>
</section>


<form action="/createTask" method="post" id="startLog">

    <section>
        <!-- Trigger/Open The Modal -->
        <button id="myBtn" type="button">Vælg tankstation</button>

        <!-- The Modal -->
        <div id="myModal" class="modal">

            <!-- Modal content -->
            <div class="modal-content">
                <span class="close">&times;</span>
                <p>Vælg tankstation</p>

            {{!-- loop over hver branch --}}
            {{#each branchDropdowns}}
            <div class="branch-dropdown">
                
                <select id="station-{{name}}" name="station-{{name}}" class="station-select">
                    <option value="">{{name}}</option>

                        {{!-- loop over stationer under denne branch --}}
                        {{#each stations}}
                        <option value="{{id}}" data-address="{{address}}">
                              {{address}} – {{zipCode}} {{city}}
                        </option>
                        {{/each}}
                    </select>
                </div>
                {{/each}}


                <!-- Knap til at vælge station -->
                <button class="selectStationBtn" id="selectStationBtn" type="button">Godkend</button>
            </div>
        </div>
    </section>

    <section class="start" >
        <!-- start rengøring ved (valgte tankstation) -->
        <p >Start rengøring ved:</p>
        <span id="selected-station"></span>
    </section>


    <section class="startTime">
        <div id="calendar" >
        <label class="calenderText" for="startTime">Vælg dato og tid:</label> <br>
        <input id="startTime" name="startTime" type="datetime-local" required >
        </div>
    </section>


    <section>
    <!--start log-->
    <button form="startLog" class="startLog" type="submit">Start log</button>
    </section>
</form>


